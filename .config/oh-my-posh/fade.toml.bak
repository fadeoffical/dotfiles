#version = 3

[[blocks]]
  type = "prompt"
  alignment = "left"
  
  [[blocks.segments]]
    type = "session"
    style = "plain"
    template = '{{ .UserName }}@{{ .HostName }}'
    background = "transparent"
    foreground = 'white'

  [[blocks.segments]]
    template = ' {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }} '
    foreground = '#ee79d1'
    type = 'git'
    style = 'diamond'

    [blocks.segments.properties]
      branch_icon = ' '
      fetch_status = true
      fetch_upstream_icon = true
      fetch_worktree_count = true

[[blocks]]
  type = 'prompt'
  alignment = 'left'
  newline = true

  [[blocks.segments]]
    type = "status"
    style = "plain"
    template = " % "
    foreground_templates = [ "{{ if ne .Code 0 }}red{{ end }}", "{{ if eq .Code 0 }}green{{ end }}" ]

    [blocks.segments.properties]
      always_enabled = true

[transient_prompt]
  template = "% "
  foreground = "white"
  
